#include <iostream>

using namespace std;

int main() {
    int choice;
    double num1, num2;

    while (true) {
        // Вывод меню
        cout << "Меню:\n";
        cout << "1. Выполнить операцию * (умножение)\n";
        cout << "2. Выполнить операцию / (деление)\n";
        cout << "Введите номер желаемой операции или 0, если хотите закрыть приложение: ";
        cin >> choice;

        // Проверка на необходимость выхода из программы
        if (choice == 0) {
            cout << "Выход из приложения..." << endl;
            break;
        }

        // Обработка выбора пользователя
        switch (choice) {
            case 1: // Умножение
                cout << "Введите два числа для умножения: ";
                cin >> num1 >> num2;
                cout << "Результат: " << num1 * num2 << endl;
                break;
            case 2: // Деление
                cout << "Введите два числа для деления: ";
                cin >> num1 >> num2;
                // Проверка на деление на ноль
                if (num2 != 0) {
                    cout << "Результат: " << num1 / num2 << endl;
                } else {
                    cout << "Ошибка: Деление на ноль!" << endl;
                }
                break;
            default:
                cout << "Неверный выбор. Пожалуйста, выберите 1, 2 или 0." << endl;
                break;
        }
    }

    return 0;
}